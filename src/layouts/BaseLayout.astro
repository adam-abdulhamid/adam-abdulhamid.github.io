---
const { title } = Astro.props;
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-white text-gray-900 font-cm">
    <header class="border-b border-gray-200 mb-8">
      <nav class="max-w-4xl mx-auto p-4">
        <div class="flex justify-between items-center">
          <h1 class="text-xl font-bold">
            <a href="/" class="hover:text-gray-700 transition-colors">Adam Abdulhamid</a>
          </h1>
          <div class="space-x-6">
            <a href="/" class="hover:text-gray-700 transition-colors">Home</a>
            <a href="/about" class="hover:text-gray-700 transition-colors">About</a>
            <a href="/posts" class="hover:text-gray-700 transition-colors">Posts</a>
          </div>
        </div>
      </nav>
    </header>
    <main class="max-w-4xl mx-auto p-4">
      <slot />
    </main>
  </body>
</html> 